<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
         <% if @user.id == current_user.id %>
          <%= link_to "edit",edit_user_path %>
         <% else %>
          <%= link_to "edit",user_path(current_user.id) %>
         <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <%= f.text_field :title %>
          <%= f.text_area :body %>
          <%= f.submit '投稿' %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
                <td><%= link_to book.title, book_path(book.id),method: :get %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
