<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "edit",edit_user_path(current_user.id) %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @newbook, local:true do |f| %>
          <%= f.text_field :title %>
          <%= f.text_area :body %>
          <%= f.submit '投稿' %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= attachment_image_tag @book.user , :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to "Edit",edit_book_path(@book.id) ,class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "delete",book_path(@book.id),method: :delete,class:"btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>





